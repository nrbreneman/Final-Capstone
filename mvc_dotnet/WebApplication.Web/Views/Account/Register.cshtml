@model SportsClubOrganizer.Web.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="page-info">
    <h2>New User Registration</h2>
    <form asp-controller="Account" asp-action="register" method="post">

        <div class="Register">
            <p>
                <label asp-for="Email"></label>
            </p>
            <p>
                <input type="text" asp-for="Email" class="input" placeholder="enter email address" />
                <span asp-validation-for="Email"></span>
            </p>

            <p>
                <label asp-for="Password"></label>
            </p>
            <p>
                <input type="password" asp-for="Password" class="input" placeholder="enter password" />
                <span asp-validation-for="Password"></span>
            </p>

            <p>
                <label asp-for="ConfirmPassword"></label>
            </p>
            <p>
                <input type="password" asp-for="ConfirmPassword" class="input" placeholder="confirm password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </p>
            <p>Already a member? Login <a asp-action="Login" asp-controller="Account">here!</a></p>
        </div>

        <input type="submit" value="Register" class="btn btn-default" />
    </form>
</div>