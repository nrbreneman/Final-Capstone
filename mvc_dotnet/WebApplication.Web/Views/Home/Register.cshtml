@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-controller="account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.Name"></label>
        <input type="text" asp-for="Team.Name" />
        <span asp-validation-for="Team"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.Org"></label>
        <input type="text" asp-for="Team.Org" />
        <span asp-validation-for="Team"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.League"></label>
        <input type="text" asp-for="Team.League" />
        <span asp-validation-for="Team"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.PrimaryVenue"></label>
        <input type="text" asp-for="Team.PrimaryVenue" />
        <span asp-validation-for="Team"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.SecondaryVenue"></label>
        <input type="text" asp-for="Team.SecondaryVenue" />
        <span asp-validation-for="Team"></span>
    </div>
    @*<div class="form-group">
        <label asp-for="Team.HomeDates"></label>
        <input type="text" asp-for="Team.HomeDates" />
        <span asp-validation-for="Team"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.TravelDates"></label>
        <input type="text" asp-for="Team.TravelDates" />
        <span asp-validation-for="Team"></span>
    </div>*@


    <input type="submit" value="Register" class="btn btn-default" />

</form>