@model League
@{
    ViewData["Title"] = "CreateNewLeague";
}

<div class="page-info">
    <h2>Create New League</h2>
    <form asp-controller="Home" asp-action="CreateNewLeague" method="post">
        <div class="form-group">
            <label asp-for="LeagueName"></label>
            <input type="text" asp-for="LeagueName" />
            <span asp-validation-for="LeagueName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Org"></label>
            <input type="text" asp-for="Org" />
            <span asp-validation-for="Org"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sport"></label>
            <input type="text" asp-for="Sport" />
            <span asp-validation-for="Sport"></span>
        </div>
        <input type="submit" value="CreateNewLeague" class="btn btn-default" />
    </form>
</div>