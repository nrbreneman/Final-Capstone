@model Team
@{
    ViewData["Title"] = "ChangeMyTeamInfo";
}
<div class="page-info">
    <h2>Modify Teams</h2>

    <p>Please select team:</p>
    <form asp-controller="Home" asp-action="ChangeATeamInfo" method="post">
        <label asp-for="Name" class="control-label">Team Name</label>
        <select asp-for="Name" asp-items="Model.DropDownListTeam"></select>

        <input type="submit" value="ChangeATeamInfo" class="btn btn-default" />

        <a asp-controller="Home" asp-action="AdminHomePage" method="post">
            <input type="button" value="Back To Admin Home Page" class="btn btn-default" />
        </a>
    </form>
</div>