@model List<Team>
@{
    ViewData["Title"] = "UserHomePage";
}

<div class="page-info">

    @{
        if (DateTime.Now.Hour < 12 && DateTime.Now.Hour >= 0)
        {
            <h3>Good Morning!</h3>
        }
        else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 17)
        {
            <h3>Good Afternoon!</h3>
        }
        else if (DateTime.Now.Hour <= 24 && DateTime.Now.Hour >= 17)
        {
            <h3>Good Evening!</h3>
        }
    }

    <div class="user-links">
        <ul>
            <li><a asp-action="ViewMyLeague" asp-controller="Home">View All Teams in Your League</a></li>
            <li><a asp-action="ChangeMyTeamInfo" asp-controller="Home">Update Team Info</a></li>
            <li><a asp-action="UpdateUserInfo" asp-controller="Home">Update My Username/Password</a></li>
            <li><a asp-action="Schedule" asp-controller="Home">See Schedule</a></li>
            @*finalized schedule needs to be able to filter teams and propose/reject games*@
            <li><a asp-action="AddAvailableDates" asp-controller="Home">Add Availability</a></li>
            <li><a asp-action="SeeMessages" asp-controller="Message">Message Center</a></li>
        </ul>
    </div>
</div>