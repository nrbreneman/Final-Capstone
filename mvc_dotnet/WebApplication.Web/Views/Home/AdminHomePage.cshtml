@model Team
@{
    ViewData["Title"] = "AdminHomePage";
}

<div class="page-info">
    <h2>Admin Home Page</h2>

    <form asp-controller="Home" asp-action="ViewTeam" method="get">

        <label asp-for="League"></label>
        <input asp-for="League" />
        @*Make dropdown of leagues*@

        <button type="submit">Search</button>

    </form>
    <div class="admin-links">
        <ul>
            <li><a asp-action="ViewAllTeams" asp-controller="Home">View All Teams</a></li>
            <li><a asp-action="ChangeATeamInfo" asp-controller="Home">Modify Teams</a></li>
            <li><a asp-action="ApproveUser" asp-controller="Home">Approve New User</a></li>
            <li><a asp-action="CreateNewLeague" asp-controller="Home">Create New League</a></li>
            <li><a asp-action="FinalizeEvent" asp-controller="Home">Finalize Events</a></li>
            <li><a asp-action="SeeAvailability" asp-controller="Home">See Team Availability</a></li>
        </ul>
    </div>
</div>