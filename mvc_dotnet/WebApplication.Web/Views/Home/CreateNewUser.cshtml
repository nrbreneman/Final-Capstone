@model WebApplication.Web.Models.User

@{
    ViewData["Title"] = "CreateNewUser";
}
<div class="page-info">
    <h2>CreateNewUser</h2>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Home" asp-action="CreateNewUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="League" class="control-label">League</label>
                    <select asp-for="League" asp-items="Model.LeagueDropDown"></select>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <a asp-controller="Home" asp-action="AdminHomePage" method="post">
        <input type="button" value="Back To Admin Home Page" class="btn btn-default" />
    </a>
</div>