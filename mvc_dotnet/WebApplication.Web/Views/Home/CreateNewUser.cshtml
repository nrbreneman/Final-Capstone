@model WebApplication.Web.Models.User

@{
    ViewData["Title"] = "CreateNewUser";
}
<div class="page-info">
    <h2>Create New User</h2>

    <form asp-controller="Home" asp-action="CreateNewUser" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <p>
            <label asp-for="Username" class="control-label"></label>
        </p>
        <p>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger" placeholder="enter email address"></span>
        </p>
        <p>
            <label asp-for="Password" class="control-label"></label>
        </p>
        <p>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" placeholder="enter password"></span>
        </p>
        <p>
            <label asp-for="League" class="control-label">League</label>
        </p>
        <p>
            <select asp-for="League" asp-items="Model.LeagueDropDown"></select>
        </p>

        <div class="checkbox">
            <label>
                <input asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
            </label>
        </div>

        <input type="submit" value="Create" class="btn btn-default" />

        <a asp-controller="Home" asp-action="AdminHomePage" method="post">
            <input type="button" value="Back to Home Page" class="btn btn-default" />
        </a>

    </form>
</div>