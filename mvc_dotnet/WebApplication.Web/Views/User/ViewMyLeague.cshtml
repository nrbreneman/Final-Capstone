@using SportsClubOrganizer.Web.Models
@model List<SportsClubOrganizer.Web.Models.Team>
@{
    ViewData["Title"] = "ViewMyLeague";
}

<div class="page-info">
    <h2>Teams In My League</h2>
    <table>
        <tr>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="TeamName" class="table-links">Team Name</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="League" class="table-links">League</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="Organization" class="table-links">Organization</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="PrimaryVenue" class="table-links">Primary Venue</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="SecondaryVenue" class="table-links">Secondary Venue</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="HomeAvailable" class="table-links">Home Dates Available</a></th>
            <th><a asp-action="ViewMyLeague" asp-route-sortOrder="TravelAvailable" class="table-links">Travel Dates Available</a></th>
        </tr>

        @foreach (Team team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.League</td>
                <td>@team.Org</td>
                <td>@team.PrimaryVenue</td>
                <td>@team.SecondaryVenue</td>
                @*<td>
                        @foreach (DateTime date in team.HomeDates)
                        {
                            @date.ToString("MM/dd/yyyy")

                        }
                    </td>
                    <td>
                        @foreach (DateTime date in team.TravelDates)
                        {
                            @date.ToString("MM/dd/yyyy")

                        }
                    </td>*@
            </tr>
        }
    </table>

    <a asp-controller="User" asp-action="UserHomePage">
        <input type="button" value="Back to My Account" class="btn btn-default" />
    </a>
</div>