@model SportsClubOrganizer.Web.Models.User
@{
    ViewData["Title"] = "SendMessages";
}
<div class="page-info">
    <h2>Send Messages</h2>
    <form asp-controller="Message" asp-action="SendMessages" method="post">
        <p>
            <select asp-for="UserTeam.Name" asp-items="Model.UserTeam.DropDownListTeam" class="dropbtn"></select>
        </p>
        <p>Select a location:</p>
        <p><strong>@Model.UserTeam.PrimaryVenue</strong></p>
        <p><strong>@Model.UserTeam.SecondaryVenue</strong></p>
        <p>Select from your available Home Dates:</p>
        @foreach (DateTime date in Model.UserTeam.HomeDates)
        {
            <p>@date.ToString("MM/dd/yyyy")</p>
        }

        <p><strong>Away</strong></p>
        <p>Select from your available Travel Dates:</p>
        @foreach (DateTime date in Model.UserTeam.TravelDates)
        {
            <p>@date.ToString("MM/dd/yyyy")</p>
        }

        <input type="submit" value="Submit Message" class="btn btn-default" />
    </form>
</div>